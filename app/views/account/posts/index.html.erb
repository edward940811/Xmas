
<div class="col-md-12">
  
  <h2 class="text-center"> MY POSTS </h2>
  
  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> Title </th>
        <th> Description </th>
        <th> Post Count </th>
        <th> Last Update </th>
      </tr>
    </thead>
    
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> # </td>
          <td> <%= link_to(post.title, post_path(post)) %> </td> 
          <td> <%= post.description %> </td> 
          <td> <%= post.responds.size %> </td> 
          <td> <%= post.updated_at %> </td> 
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
